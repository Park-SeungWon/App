<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="415dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#CDCCCC"
            android:text="출판사"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FAF5F5"
            android:text="학년"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="20sp"
            android:textStyle="bold"
            app:iconTint="#EDEDED" />
    </LinearLayout>

    <TextView
        android:id="@+id/천재"
        android:layout_width="412dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"

        android:text="  천재"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="407dp"
        android:layout_height="149dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/천재">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qwe1"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:background="@drawable/layer_list"
                    android:backgroundTint="#D3F79C"
                    android:text="00중 1학년\n 500단어" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qwe2"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:background="@drawable/layer_list"
                    android:backgroundTint="#D3F79C"
                    android:text="00중 2학년\n 500단어" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qwe3"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:background="@drawable/layer_list"
                    android:backgroundTint="#D3F79C"
                    android:text="00중 3학년\n 500단어" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qwe4"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:background="@drawable/layer_list"
                    android:backgroundTint="#D3F79C"
                    android:text="00중 3학년\n 500단어" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qwe5"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#D3F79C"
                    android:text="00중 3학년\n 500단어" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/qwe6"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:backgroundTint="#D3F79C"
                    android:text="00중 3학년\n 500단어"/>
            </LinearLayout>

        </HorizontalScrollView>


    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="412dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="  동아"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="413dp"
        android:layout_height="153dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/qwe10"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:background="@drawable/layer_list"
                android:backgroundTint="#FACD91"
                android:text="00중 3학년\n 500단어" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/qwe11"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:background="@drawable/layer_list"
                android:backgroundTint="#FACD91"
                android:text="00중 3학년\n 500단어" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/qwe12"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:background="@drawable/layer_list"
                android:backgroundTint="#FACD91"
                android:text="00중 3학년\n 500단어" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/qwe13"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:background="@drawable/layer_list"
                android:backgroundTint="#FACD91"
                android:text="00중 3학년\n 500단어" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/qwe14"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:backgroundTint="#FACD91"
                android:text="00중 3학년\n 500단어" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/qwe15"
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:backgroundTint="#FACD91"
                android:text="00중 3학년\n 500단어" />
        </LinearLayout>

    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button13"
        android:layout_width="365dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:background="#7BD0F6"
        android:text="최근 학습한 단어장을 확인해보세요"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>